<h1>Clocks</h1>

<form method="POST" action="/clocks/{{clock.id}}?_method=PUT">
  <div class="card border-dark mb-3" style="max-width: 18rem;">
    <div class="card-header">
      <h2>Edit clock detials</h2>
    </div>
    <div class="card-body text-dark">
      <div class="form-group">
        <label for="manufacturer">Manufacturer</label>
        <input type="text" name="manufacturer" value="{{clock.manufacturer}}" />
      </div>
      <div class="form-group">
        <label for="model">Model</label>
        <input type="text" name="model" value="{{clock.model}}" />
      </div>
      <div class="form-group">
        <label for="type">Type</label><br>
        <input type="text" name="type" value="{{clock.type}}" />
      </div>
      <input type="submit" value="Frissítés"/>
      <button type="submit" class="btn btn-info">Send</button>
    </div>
  </div>
  </div>
</form>